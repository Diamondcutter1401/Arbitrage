# Environment variables for arbitrage bot
# Copy this file to .env and fill in your actual values

# RPC URLs
BASE_RPC=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ARB_RPC=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Private transaction RPCs (optional)
BASE_PRIVATE_TX_RPC=
ARB_PRIVATE_TX_RPC=

# Bot configuration
SEARCHER_PK=0xYOUR_PRIVATE_KEY_HERE
EXECUTOR_CONTRACT=0xYOUR_DEPLOYED_ARB_EXECUTOR_ADDRESS

# Database configuration
PGHOST=db
PGUSER=arb
PGPASSWORD=arb
PGDATABASE=arb
PGPORT=5432

# Optional: Redis configuration (if using Redis)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/arbitrage.log

# Risk management
MAX_POSITION_SIZE_USD=50000
MAX_DAILY_LOSS_USD=1000
MAX_GAS_PRICE_GWEI=50

# Monitoring
METRICS_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# Chain-specific settings
BASE_CHAIN_ID=8453
ARB_CHAIN_ID=42161

# Price feed configuration (if using external feeds)
# COINGECKO_API_KEY=your_coingecko_api_key
# CHAINLINK_VRF_SUBSCRIPTION_ID=your_subscription_id
