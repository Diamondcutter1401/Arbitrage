# Environment variables for DEX arbitrage bot
# Copy this file to .env and fill in your actual values

# RPC URLs
BASE_RPC=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
ARB_RPC=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY

# Private transaction RPCs (optional)
BASE_PRIVATE_TX_RPC=
ARB_PRIVATE_TX_RPC=

# Private keys
SEARCHER_PK=0x...

# Contract addresses (after deployment)
EXECUTOR_CONTRACT=0x...

# Database connection
DATABASE_URL=postgresql://arb:arb@db:5432/arb

# Bot configuration
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_PORT=3000

# Risk management
MAX_GAS_PRICE_GWEI=0.05
MAX_SLIPPAGE_BPS=5
PROFIT_FLOOR_USD=0.01

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
